{
	"resources": [
		{
			"method": "GET",
			"resource": "users",
			"resource_group": "General",
			"resource_url": "api/v1/users",
			"description": "Gets a list of all registered users.",
			"information": {
				"response_format": "JSON",
				"requires_auth": false
			},
			"body_parameters": [],
			"responses": [
				{
					"code": 200,
					"reason": "Successful request"
				},
				{
					"code": 403,
					"reason": "Database is unavailable"
				}
			],
			"sample_request": {
				"url": "api/v1/users"
			},
			"sample_response": {
				"status": 200,
				"body": {
					"users": [
						{
							"id": 1,
							"username": "user1",
							"role": "renter"
						},
						{
							"id": 1,
							"username": "user2",
							"role": "rentee"
						}
					]
				}
			}
		},
		{
			"method": "POST",
			"resource": "register",
			"resource_group": "Auth",
			"resource_url": "api/v1/auth/register",
			"description": "Registers a user (returns an http-only cookie with the auth token).",
			"information": {
				"response_format": "JSON",
				"requires_auth": false
			},
			"body_parameters": [
				{
					"name": "username",
					"required": "required",
					"description": "The user name."
				},
				{
					"name": "password",
					"required": "required",
					"description": "The user password."
				},
				{
					"name": "role",
					"required": "required",
					"description": "The user role. Can be either 'renter' or 'rentee'."
				}
			],
			"responses": [
				{
					"code": 200,
					"reason": "Registration successful."
				},
				{
					"code": 400,
					"reason": "The request body is invalid."
				},
				{
					"code": 400,
					"reason": "The data provided in the request body is invalid. Please check your registration information and try again."
				},
				{
					"code": 409,
					"reason": "The requested username is already taken. Please choose a different username."
				},
				{
					"code": 503,
					"reason": "Sorry, we are currently experiencing technical difficulties. Please try again later."
				}
			],
			"sample_request": {
				"url": "api/v1/auth/register",
				"body": {
					"username": "user1",
					"password": "pass123",
					"role": "renter"
				}
			},
			"sample_response": {
				"status": 200,
				"body": {
					"message": "Registration successful."
				}
			}
		},
		{
			"method": "POST",
			"resource": "login",
			"resource_group": "Auth",
			"resource_url": "api/v1/auth/login",
			"description": "Logs in a user (returns an http-only cookie with the auth token).",
			"information": {
				"response_format": "JSON",
				"requires_auth": false
			},
			"body_parameters": [
				{
					"name": "username",
					"required": "required",
					"description": "The user name."
				},
				{
					"name": "password",
					"required": "required",
					"description": "The user password."
				}
			],
			"responses": [
				{
					"code": 200,
					"reason": "Login successful!"
				},
				{
					"code": 400,
					"reason": "The request body is invalid."
				},
				{
					"code": 400,
					"reason": "The data provided in the request body is invalid. Please check your login information and try again."
				},
				{
					"code": 401,
					"reason": "Invalid username or password. Please check your credentials and try again."
				},
				{
					"code": 503,
					"reason": "Sorry, we are currently experiencing technical difficulties. Please try again later."
				}
			],
			"sample_request": {
				"url": "api/v1/auth/login",
				"body": {
					"username": "user1",
					"password": "pass123"
				}
			},
			"sample_response": {
				"status": 200,
				"body": {
					"message": "Login successful!"
				}
			}
		},
		{
			"method": "POST",
			"resource": "logout",
			"resource_group": "Auth",
			"resource_url": "api/v1/auth/logout",
			"description": "Deletes the user auth token cookie.",
			"information": {
				"response_format": "JSON",
				"requires_auth": false
			},
			"body_parameters": [],
			"responses": [
				{
					"code": 200,
					"reason": "Log out successful!"
				}
			],
			"sample_request": {
				"url": "api/v1/auth/logout"
			},
			"sample_response": {
				"status": 200,
				"body": {
					"message": "Log out successful!"
				}
			}
		}
	]
}